<div class="row">
  <div class="col">
    <h1>Welcome, <%= @user.username %></h1>
    <button onclick="window.location='/users/logout'" class="btn btn-light">Log Out</button>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-6">
    <a href="/games"><h3>Games</h3></a>
    <p>Recent games:</p>
    <ul class="list-group list-group-flush">
      <% @user.recent(@user.games).each do |game| %>
        <a href="/games/<%= game.id %>">
          <li class="list-group-item"><%= game.name %></li>
        </a>
      <% end %>
    </ul>
  </div>